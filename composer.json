{
	"name": "phpgt/promise",
	"description": "Pleasantly work with asynchronous code.",
	"license": "MIT",

	"require": {
		"php": ">=8.1"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.10",
		"phpunit/phpunit": "^10.1",
		"phpmd/phpmd": "^2.13",
		"squizlabs/php_codesniffer": "^3.7"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Promise\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Promise\\Test\\": "./test/phpunit"
		}
	},
	"keywords": [
		"promise",
		"async",
		"asynchronous",
		"concurrent",
		"concurrency",
		"then",
		"deferred",
		"w3c",
		"callback"
	],
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
